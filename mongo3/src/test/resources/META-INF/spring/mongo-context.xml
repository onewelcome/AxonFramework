<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Serializer with proper security configuration -->
    <bean class="org.axonframework.mongo3.SpringConfiguration"/>

    <!-- Axon Event store -->
    <bean id="eventStore" class="org.axonframework.mongo3.eventstore.MongoEventStore" lazy-init="true">
        <constructor-arg ref="serializer"/>
        <constructor-arg ref="template"/>
    </bean>

    <!-- Infrastructure Mongo -->
    <bean id="template" class="org.axonframework.mongo3.eventstore.DefaultMongoTemplate">
        <constructor-arg ref="mongoDb"/>
    </bean>

    <bean id="mongoDb" class="com.mongodb.MongoClient" factory-bean="mongoFactoryBean" factory-method="createMongo"
          lazy-init="true"/>

    <bean id="mongoFactoryBean" class="org.axonframework.mongo3.eventstore.MongoFactory" lazy-init="true">
        <property name="mongoOptions">
            <bean class="com.mongodb.MongoClientOptions" factory-bean="mongoOptionsFactory"
                  factory-method="createMongoOptions"/>
        </property>
    </bean>

    <bean id="mongoOptionsFactory" class="org.axonframework.mongo3.eventstore.MongoOptionsFactory">
        <property name="connectionsPerHost" value="100"/>
    </bean>

    <!-- Axon saga's -->
    <bean id="springResourceInjector" class="org.axonframework.saga.spring.SpringResourceInjector"/>

    <bean id="mongoSagaRepository" class="org.axonframework.mongo3.saga.repository.MongoSagaRepository">
        <constructor-arg ref="sagaMongoTemplate"/>
    </bean>

    <bean id="sagaMongoTemplate" class="org.axonframework.mongo3.saga.repository.DefaultMongoTemplate">
        <constructor-arg ref="mongoDb"/>
    </bean>

</beans>
